@model IEnumerable<PEA.Models.DeptEmp>
@{
    ViewData["Title"] = "Asignaciones";
    var empNo = (int)ViewBag.EmpNo;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Asignaciones del empleado @empNo</h2>
    <a class="btn btn-success" href="/DeptEmps/Create?empNo=@empNo">Nueva asignación</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No hay asignaciones registradas.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Depto</th>
                <th>Nombre</th>
                <th>Desde</th>
                <th>Hasta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.DeptNo</td>
                    <td>@(x.Department?.DeptName ?? "-")</td>
                    <td>@x.FromDate.ToString("yyyy-MM-dd")</td>
                    <td>@(x.ToDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
}
