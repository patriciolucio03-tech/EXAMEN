@model PEA.Models.ViewModels.BulkTitlesVM
@{
    ViewData["Title"] = "Agregar varios títulos";
    var empNo = Model.EmpNo;
    var filas = Model.Items?.Count ?? 0;
}
<h2>Agregar varios títulos al empleado @empNo</h2>

<!-- Enlace que recarga la página con una fila extra (rows = filas + 1) -->
<div class="mb-2 d-flex gap-2">
    <a class="btn btn-outline-secondary"
       asp-action="Bulk"
       asp-route-empNo="@empNo"
       asp-route-rows="@(filas + 1)">
        + Agregar fila
    </a>

    @if (filas > 1)
    {
        <a class="btn btn-outline-danger"
           asp-action="Bulk"
           asp-route-empNo="@empNo"
           asp-route-rows="@(filas - 1)">
            Quitar última fila
        </a>
    }
</div>

<form asp-action="Bulk" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input asp-for="EmpNo" type="hidden" />

    <div class="col-12">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th style="min-width:260px">Título</th>
                        <th style="min-width:160px">Desde</th>
                        <th style="min-width:160px">Hasta</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Items.Count; i++)
                    {
                        <tr>
                            <td>
                                <input class="form-control" asp-for="Items[@i].TitleName" placeholder="Ej. Analista, Jefe..." />
                                <span class="text-danger" asp-validation-for="Items[@i].TitleName"></span>
                            </td>
                            <td>
                                <input class="form-control" asp-for="Items[@i].FromDate" type="date" />
                                <span class="text-danger" asp-validation-for="Items[@i].FromDate"></span>
                            </td>
                            <td>
                                <input class="form-control" asp-for="Items[@i].ToDate" type="date" />
                                <span class="text-danger" asp-validation-for="Items[@i].ToDate"></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary">Guardar todos</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-empNo="@empNo">Cancelar</a>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

<partial name="_ValidationScriptsPartial" />
