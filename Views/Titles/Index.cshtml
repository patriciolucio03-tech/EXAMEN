@model IEnumerable<PEA.Models.Title>
@{
    ViewData["Title"] = "Títulos";
    var empNo = ViewBag.EmpNo is int v ? v : (Model?.FirstOrDefault()?.EmpNo ?? 0);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Títulos del empleado @empNo</h2>
    <div class="btn-group">
        <a class="btn btn-success" asp-action="Create" asp-route-empNo="@empNo">Agregar uno</a>
        <a class="btn btn-primary" asp-action="Bulk" asp-route-empNo="@empNo">Agregar varios</a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Sin títulos registrados.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Desde</th>
                    <th>Hasta</th>
                    <th style="width:1%">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.OrderByDescending(t => t.FromDate))
                {
                    <tr>
                        <td>@x.TitleName</td>
                        <td>@x.FromDate.ToString("yyyy-MM-dd")</td>
                        <td>@(x.ToDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>
                            <a class="btn btn-sm btn-primary"
                               asp-action="Edit"
                               asp-route-empNo="@x.EmpNo"
                               asp-route-titleName="@x.TitleName"
                               asp-route-fromDate="@x.FromDate.ToString("yyyy-MM-dd")">
                                Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
