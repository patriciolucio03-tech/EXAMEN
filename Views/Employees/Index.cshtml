@model IEnumerable<PEA.Models.Employee>
@{
    ViewData["Title"] = "Empleados";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Empleados</h2>
    <a class="btn btn-success" href="/Employees/Create">Nuevo</a>
</div>
<form method="get" class="mb-3">
    <div class="input-group">
        <input name="q" class="form-control" placeholder="Buscar por nombre, apellido, cédula o correo" value="@Context.Request.Query["q"]" />
        <button class="btn btn-outline-secondary">Buscar</button>
    </div>
</form>
<table class="table table-striped">
    <thead><tr><th>#</th><th>CI</th><th>Nombre</th><th>Correo</th><th>Activo</th><th></th></tr></thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.EmpNo</td>
                <td>@e.CI</td>
                <td>@e.FirstName @e.LastName</td>
                <td>@e.Correo</td>
                <td>@(e.Activo ? "Sí" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Employees/Edit/@e.EmpNo">Editar</a>
                    <a class="btn btn-sm btn-secondary" href="/Salaries?empNo=@e.EmpNo">Salarios</a>
                    <a class="btn btn-sm btn-secondary" href="/Titles?empNo=@e.EmpNo">Títulos</a>
                    <a class="btn btn-sm btn-secondary" href="/DeptEmps?empNo=@e.EmpNo">Deptos</a>
                </td>
            </tr>
        }
    </tbody>
</table>