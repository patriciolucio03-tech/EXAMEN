@model PEA.Models.Employee
@{
    ViewData["Title"] = "Editar empleado";
}
<h2>Editar empleado</h2>
<form method="post" class="row g-3">
    <input asp-for="EmpNo" type="hidden" />
    <div class="col-md-4">
        <label class="form-label">Cédula</label>
        <input asp-for="CI" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Nombres</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Apellidos</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Correo</label>
        <input asp-for="Correo" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Fecha Nac.</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Ingreso</label>
        <input asp-for="HireDate" type="date" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Género (M/F)</label>
        <input asp-for="Gender" maxlength="1" class="form-control" />
    </div>
    <div class="col-md-3 form-check mt-4">
        <input asp-for="Activo" class="form-check-input" />
        <label class="form-check-label">Activo</label>
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" href="/Employees">Cancelar</a>
    </div>
</form>
<partial name="_ValidationScriptsPartial" />