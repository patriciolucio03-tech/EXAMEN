@model PEA.Models.Department
@{
    ViewData["Title"] = "Editar departamento";
}
<h2>Editar departamento</h2>
<form method="post" class="row g-3">
    <div class="col-md-3">
        <label class="form-label">Código</label>
        <input asp-for="DeptNo" class="form-control" readonly />
    </div>
    <div class="col-md-6">
        <label class="form-label">Nombre</label>
        <input asp-for="DeptName" class="form-control" />
    </div>
    <div class="col-md-3 form-check mt-4">
        <input asp-for="Activo" class="form-check-input" /> <label class="form-check-label">Activo</label>
    </div>
    <div class="col-12"><button class="btn btn-primary">Guardar</button> <a class="btn btn-secondary" href="/Departments">Cancelar</a></div>
</form>
<partial name="_ValidationScriptsPartial" />