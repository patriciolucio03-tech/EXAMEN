@model PEA.Models.Salary
@{
    ViewData["Title"] = "Editar salario";
    var originalFromDate = (DateTime)(ViewBag.OriginalFromDate ?? Model.FromDate);
}
<h2>Editar salario</h2>

<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input asp-for="EmpNo" type="hidden" />
    <input type="hidden" name="originalFromDate" value="@originalFromDate.ToString("yyyy-MM-dd")" />

    <div class="col-md-4">
        <label class="form-label">Desde</label>
        <input asp-for="FromDate" type="date" class="form-control" />
        <span class="text-danger" asp-validation-for="FromDate"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Hasta (opcional)</label>
        <input asp-for="ToDate" type="date" class="form-control" />
        <span class="text-danger" asp-validation-for="ToDate"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Monto</label>
        <input asp-for="Amount" class="form-control" />
        <span class="text-danger" asp-validation-for="Amount"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Motivo del aumento (si corresponde)</label>
        <input name="motivoAumento" class="form-control" placeholder="Obligatorio si el monto aumenta" />
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-empNo="@Model.EmpNo">Cancelar</a>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>

<partial name="_ValidationScriptsPartial" />
