@model IEnumerable<PEA.Models.Salary>
@{
    ViewData["Title"] = "Salarios";
    var empNo = ViewBag.EmpNo is int v ? v : (Model?.FirstOrDefault()?.EmpNo ?? 0);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Salarios del empleado @empNo</h2>
    <a class="btn btn-primary" asp-action="Create" asp-route-empNo="@empNo">Agregar salario</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Sin salarios registrados.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Desde</th>
                    <th>Hasta</th>
                    <th>Monto</th>
                    <th style="width:1%">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.OrderByDescending(s => s.FromDate))
                {
                    <tr>
                        <td>@x.FromDate.ToString("yyyy-MM-dd")</td>
                        <td>@(x.ToDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                        <td>@x.Amount.ToString("N2")</td>
                        <td>
                            <a class="btn btn-sm btn-primary"
                               asp-action="Edit"
                               asp-route-empNo="@x.EmpNo"
                               asp-route-fromDate="@x.FromDate.ToString("yyyy-MM-dd")">
                                Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
