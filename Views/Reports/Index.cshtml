@{
    ViewData["Title"] = "Reportes";
}
<h2>Reportes</h2>

<form method="get" asp-controller="Reports" asp-action="PayrollByDept" class="row g-3">
    <div class="col-md-3">
        <label class="form-label">DeptNo</label>
        <input name="deptNo" class="form-control" placeholder="d002" required />
    </div>
    <div class="col-md-3">
        <label class="form-label">Fecha de corte</label>
        <input name="fechaCorte" type="date" class="form-control" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Ver reporte</button>
    </div>
</form>
